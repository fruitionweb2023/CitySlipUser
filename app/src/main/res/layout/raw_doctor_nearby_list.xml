<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="88dp"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="top">

                    <ImageView
                        android:id="@+id/img_restaurent"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_unsplash_fdlzbwip0am" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/txt_restaurent_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:text="The Capital Hospital"
                    android:textColor="@color/clr_111111"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_restaurent_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Emergency, Ortho, Physician, Card..."
                    android:textColor="@color/clr_888888"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:visibility="visible">

                         <TextView

                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="2dp"
                             android:fontFamily="@font/roboto_regular"
                             android:text="Kalupur"
                             android:layout_marginEnd="2dp"
                             android:textColor="#43425D"
                             android:textSize="12sp" />


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="2dp"
                         android:layout_marginStart="2dp"
                         android:fontFamily="@font/roboto_regular"
                         android:text="|"
                         android:textColor="#43425D"
                         android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="2.7 kms"
                        android:textColor="#43425D"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vector"/>

                    <TextView
                        android:id="@+id/txt_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="4.0"
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="  â€¢  "
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_distance_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="28 mins"
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>