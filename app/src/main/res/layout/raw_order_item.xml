<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



                <androidx.cardview.widget.CardView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    app:cardCornerRadius="4dp">
                    <RelativeLayout
                        android:layout_width="88dp"
                        android:layout_height="88dp">

                        <ImageView
                            android:id="@+id/img_dish_logo"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_unsplash_fdlzbwip0am_add_order" />

                        <TextView
                            android:id="@+id/txt_offer"
                            android:layout_width="64dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/ic_rectangle_2"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="start"
                            android:paddingStart="8dp"
                            android:paddingTop="1dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="1dp"
                            android:text="20% Off"
                            android:textColor="@color/clr_FF0001"
                            android:textSize="12sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="90"
                        android:layout_gravity="top">

                        <TextView
                            android:id="@+id/txt_dish_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Veg Sandwich"
                            android:textColor="@color/clr_111111"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="end"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/img_veg_nonveg"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                         android:src="@drawable/ic_small_veg" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/txt_dish_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="[Spicy] Mozzarella cheese \n with chilli coriander and ..."
                        android:textColor="@color/clr_888888"
                        android:textSize="12sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_information"/>

                    <TextView
                        android:id="@+id/txt_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="20%"
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text=" off upto "
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="₹"
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_max_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="80"
                        android:textColor="@color/clr_444444"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="₹"
                            android:textColor="#43425D"
                            android:textSize="20sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="220"
                            android:textColor="#43425D"
                            android:textSize="20sp"
                            android:textStyle="normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="40"
                        android:gravity="end"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/btn_add"
                            android:layout_width="64dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_frame_1791"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>