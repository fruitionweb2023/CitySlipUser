<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="50"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_veg_nonveg"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_small_veg"/>

                <TextView
                    android:id="@+id/txt_dish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Veg Sandwich"
                    android:textColor="@color/clr_111111"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:background="@drawable/ic_small">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_decrement"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_small_minus"/>


                <TextView
                    android:id="@+id/txt_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:textColor="@color/clr_111111"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_increment"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_small_plus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center|center_vertical"
                android:layout_gravity="center"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="â‚¹"
                    android:textColor="@color/clr_111111"
                    android:textSize="16sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="220"
                    android:textColor="@color/clr_111111"
                    android:textSize="16sp"
                    android:textStyle="normal"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>