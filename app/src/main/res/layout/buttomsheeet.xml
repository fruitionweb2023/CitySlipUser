<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/add_item_bg"
            android:padding="24dp">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp">
                    <ImageView
                        android:id="@+id/img_dish_logo"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/bg"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:layout_weight="70">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_veg_nonveg"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_small_veg" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="top">

                            <TextView
                                android:id="@+id/txt_restaurent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veg Sandwich"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/clr_111111"
                                android:textSize="14sp"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/txt_restaurent_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[Spicy] Mozzarella cheese with chilli coriander and sizzling herbs."
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/clr_888888"
                            android:textSize="12sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/clr_111111"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="220"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/clr_111111"
                            android:textSize="16sp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_information"/>

                        <TextView
                            android:id="@+id/txt_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="20%"
                            android:textColor="@color/clr_444444"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text=" off upto "
                            android:textColor="@color/clr_444444"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="₹"
                            android:textColor="@color/clr_444444"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_max_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="80"
                            android:textColor="@color/clr_444444"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_add"
                        android:layout_width="64dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_frame_1791"
                        android:layout_gravity="end" />

                    <TextView
                        android:id="@+id/txt_customise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Customizable"
                        android:textColor="@color/clr_888888"
                        android:textSize="6sp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>